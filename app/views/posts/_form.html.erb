<% if @post.errors.any? %>
    <div class="fields_with_errors">
    <ul>
        <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
    </div>
  
<% end %>

<%= form_for @post do |f| %>
    <div class="field<%= ' field_with_errors' if @post.errors[:title].any? %>">
        <label><strong>Post Title: </strong></label>
        <%= f.text_field :title %> 
    </div>
    <br>
    <div class="field<%= ' field_with_errors' if @post.errors[:content].any? %>">
    <label><strong>Post Content: </strong></label>
    <%= f.rich_text_area :content %>
    </div>
    <br>
    <%= f.submit %>


<% end %>