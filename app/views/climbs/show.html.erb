<h1><%= @climb.name %></h1>

<h3><%= @climb.grade %></h3>
<h3><%= @climb.climb_style %></h3>
<% if current_user %>
  <% if current_user.climbs.include?(@climb) %>
    <p>You already completed this climb!!</p> 
  <% else %>
    <%= link_to 'I completed this Climb!!', new_climb_send_path(@climb) %>
  <% end %>
<% end %>

<h3>This Climb has been completed by <%=@climb.users.count %> climbers</h3>
<ul>
  <% @climb.users.each do |user|%>
    <li><%= link_to "#{user.name}", user %></li>
  <% end %>
</ul>

<% if current_user.admin %>
  <%= link_to 'Edit Route', edit_climb_path(@climb) %>
<% end %>